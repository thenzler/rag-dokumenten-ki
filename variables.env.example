# Google Cloud Variablen

# Projekt-ID (ersetzen mit deiner GCP-Projekt-ID)
PROJECT_ID=

# Region (Standard: europe-west3)
REGION=europe-west3

# Document AI
DOCAI_PROCESSOR_ID=rag-pdf-processor
DOCAI_LOCATION=eu

# Vector Search
VECTOR_INDEX_ID=rag-document-embeddings
VECTOR_ENDPOINT_ID=rag-document-embeddings-endpoint

# Cloud Storage
UPLOAD_BUCKET=${PROJECT_ID}-rag-uploads
PROCESSED_BUCKET=${PROJECT_ID}-rag-processed

# Cloud SQL
DB_NAME=rag_db
DB_USER=rag_user
# Format: PROJECT_ID:REGION:INSTANCE_NAME
DB_CONNECTION_NAME=${PROJECT_ID}:${REGION}:rag-postgres-instance

# Secret Manager
DB_PASSWORD_SECRET_ID=rag-db-password

# LLM
LLM_MODEL_NAME=gemini-1.0-pro
